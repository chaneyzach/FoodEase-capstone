                        </li>
                        <li>
                            @*<a href="/Recipe/GetRecipes">Recipes</a>*@
                            <div>
                                <a class="btn btn-secondary" href="/Recipe/GetRecipes">
                                    Recipes
                                </a>

                                @*<div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Recipe/GetRecipes">Show Recipes</a>
                                    <a class="dropdown-item" href="/Recipe/AddRecipe">Add Recipe</a>
                                </div>*@
                            </div>

                        </li>

                        <li>
