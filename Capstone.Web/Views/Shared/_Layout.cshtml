                        <li class="active">
                            <a href="/Home/Index">Home</a>
                        </li>
                        <li>
                            <a href="/User/Login">Login</a>
                        </li>
                        <li>
                            <a href="/User/Register">Register</a>
                        </li>
                    }
                    @if (Session[BaseController.UserKey] != null)
