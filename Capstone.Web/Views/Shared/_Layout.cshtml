                                @*<div class="dropdown-menu" aria-labelledby="mealPlans">
                                    <a class="dropdown-item" href="/MealPlan/GetMealPlans">Show Meal Plans</a>
                                    <a class="dropdown-item" href="/MealPlan/AddMealPlan">Add Meal Plan</a>
