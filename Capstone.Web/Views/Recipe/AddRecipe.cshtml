@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/MealPlanner/AddRecipe.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/views/addrecipe.js"></script>

}
<body>
    <!-- START Site Preloader -->
    <div id="theme-preloader-container">
        <div class="theme-preloader">
            <span class="circle-01"></span>
            <span class="circle-02"></span>
            <span class="circle-03"></span>
        </div>
    </div>
    <!-- END Site Preloader -->
    <div class="container">
        <div class="row-recipe" id="register">
            <div class="col-sm-12">
                @using (Html.BeginForm("AddNewRecipe", "Recipe", FormMethod.Post, new { id = "recipeForm", enctype = "multipart/form-data" }))
                {
                    <div class="row">
                        <div class="col-sm-6 ing_list">
                            <p>Recipe Details:</p>
                            <button type="submit" class="btn btn-default add">Save Recipe</button>
                            <div class="form-group col-sm-12">
                                @Html.Label("Recipe Name")
                                @Html.TextBox("Name", "", new { @class = "form-control", placeholder = "Name" })
                                @Html.ValidationMessage("Name", new { @class = "error" })
                            </div>
                            <div class="form-group col-sm-12">
                                @Html.Label("Description")
                                @Html.TextArea("Description", "", new { @class = "form-control", placeholder = "Description" })
                                @Html.ValidationMessage("Description", new { @class = "error" })
                            </div>
                            <div class="form-group col-sm-12">
                                @Html.Label("Instructions")
                                @Html.TextArea("Instructions", "", new { @class = "form-control", placeholder = "Instructions" })
                                @Html.ValidationMessage("Instructions", new { @class = "error" })
                            </div>
                            <div>
                                <div class="form-group col-sm-5 recipeTimeLeft">
                                    @Html.Label("Prep Time (minutes)")
                                    @Html.TextBox("PrepTime", "", new { @class = "form-control", placeholder = "Prep Time" })
                                    @Html.ValidationMessage("PrepTime", new { @class = "error" })
                                </div>
                                <div class="form-group col-sm-5 recipeTimeRight">
                                    @Html.Label("Cook Time (minutes)")
                                    @Html.TextBox("CookTime", "", new { @class = "form-control", placeholder = "Cook Time" })
                                    @Html.ValidationMessage("CookTime", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-group col-sm-12">
                                @Html.Label("Food Image")
                                @Html.TextBox("FoodImage", null, new { @class = "form-control-file", type = "file" })
                                @Html.ValidationMessage("FoodImage")
                            </div>
                        </div>
                        <div class="col-sm-6 ing_list">
                            <p>Ingredients:</p>
                            <button type="button" id="add_ing" class="btn btn-default add">Add Another</button>

                            @*<div>
                                <span class="form-group col-sm-3" style="float: left">Quantity</span>
                                <span class="form-group col-sm-9" style="float: left">Ingredient</span>
                            </div>*@
                            <div class="ingredient_box">
                                <div class="form-group col-3" style="float: left">
                                    @Html.Label("Quantity")
                                    @Html.TextBox("quantities", "", new { @class = "form-control", placeholder = "Qty" })
                                    @Html.ValidationMessage("Quantity", new { @class = "error" })
                                </div>
                                <div class="form-group col-9" style="float: left">
                                    @Html.Label("Ingredient")
                                    @Html.TextBox("ingredients", "", new { @class = "form-control", placeholder = "Ingredient" })
                                    @Html.ValidationMessage("Ingredient", new { @class = "error" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Theme Base, Components and Settings -->
    <script src="~/Scripts/theme.js"></script>
</body>
